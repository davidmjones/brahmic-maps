\DeclareRobustCommand{\rt}{\@ifstarred\@rt}

\DeclareRobustCommand{\rt@star}{%
    \@ifstar{\@starredtrue\@rt}{\@starredtrue\@rt}%
}

\let\@rootnum\@empty

\newcommand{\@rt}[2][]{%
    \begingroup
        \def\@rootnum{#1}%
        \if@starred\else √\fi
        \rtnum\S{#2}%
    \endgroup
}

\DeclareRobustCommand{\rtnum}[1][]{%
    \if###1##%
        \ifx\@rootnum\@empty\else
            \if@starred\else\,\fi
            \@rootnum.~%
        \fi
        \global\let\@rootnum\@empty
    \else
        #1.~%
    \fi
}

\endinput

\newcommand{\@rt}[2][]{%
    \begingroup
        \def\@rootnum{#1}%
        \if@starred\else √\fi
        \S{#2}\rtnum
    \endgroup
}

\DeclareRobustCommand{\rtnum}[1][]{%
    \if###1##%
        \ifx\@rootnum\@empty\else\tsup{\@rootnum}\fi
        \global\let\@rootnum\@empty
    \else
        \tsup{#1}%
    \fi
}

\endinput
